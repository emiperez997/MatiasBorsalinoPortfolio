---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Matias Portfolio">
  <section>
    <div>
      <h1>Mat√≠as Nicolas Borsalino</h1>

      <button>
        <a href="/portfolio">Portfolio</a>
      </button>
    </div>
  </section>
</Layout>

<style>
  section {
    background: url("../assets/home.jpeg");
    width: 100%;
    height: 100vh;

    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  div {
    width: 300px;
    text-align: center;
  }

  h1 {
    font-family: "Ace Sans", sans-serif;
    font-size: 2.5rem;
    font-weight: bold;
    color: white;
    margin-bottom: 1rem;

    @media (width > 760px) {
      font-size: 3rem;
    }
  }

  a {
    text-decoration: none;
    color: black;

    &:visited {
      color: black;
    }
  }

  button {
    background-color: white;
    color: black;
    border: none;
    padding: 10px 10px;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;

    transition: all 0.3s ease;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    transform: translateY(0);

    &:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }
    &:active {
      transform: translateY(0);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }
  }
</style>
