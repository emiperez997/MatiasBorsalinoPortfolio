<header>
  <section>
    <h1>Matias Borsalino</h1>

    <label for="menu-toggle">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-menu"
      >
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </label>
    <input type="checkbox" id="menu-toggle" />

    <nav>
      <a class="nav-link" href="/">Inicio</a>
      <a class="nav-link" href="/portfolio">Portfolio</a>
      <a class="nav-link" href="/about">Sobre MÃ­</a>
      <a class="nav-link" href="/contact">Contacto</a>
    </nav>
  </section>
</header>

<style>
  header {
    width: 100%;
    height: 50px;
    display: flex;
    justify-content: center;
  }

  section {
    width: 90%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }

  input {
    display: none;
  }

  label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: 1.5rem;
  }

  input:checked ~ nav {
    display: flex;
    flex-direction: column;
    right: 0%;
    top: 90%;
  }

  a {
    text-decoration: none;
    color: black;
    font-size: 1.2rem;
  }

  nav {
    position: absolute;
    display: none;
    justify-content: space-between;
    align-items: center;
    background-color: bisque;

    border: 1px solid black;
    border-radius: 5px;
  }

  .nav-link {
    width: 100%;
    padding: 10px;
    text-align: center;
    border: 1px solid black;
  }

  @media (width > 768px) {
    section {
      width: 80%;
    }
    label {
      display: none;
    }

    input:checked ~ nav {
      display: flex;
      flex-direction: row;
    }

    nav {
      position: static;
      display: flex;
      flex-direction: row;
      background-color: bisque;
    }

    .nav-link {
      padding: 5px;
      width: auto;
    }
  }
</style>
