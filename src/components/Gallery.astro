---
const pilar = Astro.props.pilar;
const title = Astro.props.title;

const images = {
  draw: [
    { alt: "Chair", src: "/src/assets/gallery/chair.jpeg" },
    {
      alt: "Gray Background",
      src: "/src/assets/gallery/gray_background_2.jpeg",
    },
    { alt: "Red Background", src: "/src/assets/gallery/red_background.jpeg" },
    {
      alt: "Green Background",
      src: "/src/assets/gallery/green_background.jpeg",
    },
  ],
  photo: [
    { alt: "Logo Brick", src: "/src/assets/gallery/lobo_brick.jpeg" },
    {
      alt: "Gray Background",
      src: "/src/assets/gallery/gray_background_1.jpeg",
    },
    { alt: "Red Background", src: "/src/assets/gallery/red_background.jpeg" },
    {
      alt: "Table",
      src: "/src/assets/gallery/table.jpeg",
    },
  ],
};
---

<section>
  <div class="container">
    <div class="title">
      <h1>{title}</h1>
    </div>
    <div class="gallery">
      {images[pilar].map((image) => <img src={image.src} alt={image.alt} />)}
    </div>
  </div>
</section>

<style>
  section {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
  }

  .title {
    width: 100%;
    text-align: center;
  }

  h1 {
    text-align: center;
    font-size: 1.5rem;
  }

  .container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .gallery {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    flex-wrap: wrap;
  }

  img {
    width: 200px;
    max-width: 400px;
    object-fit: cover;
    object-position: center;
  }

  @media (width > 768px) {
    h1 {
      font-size: 2rem;
    }

    section {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .container {
      width: 90%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .gallery {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      flex-direction: row;
      align-items: center;
      flex-wrap: wrap;
    }

    img {
      width: 500px;
      object-fit: cover;
      object-position: center;
      margin: 10px;
    }
  }

  @media (width > 1024px) {
    img {
      width: 20%;
      object-fit: cover;
      object-position: center;
      margin: 10px;
    }
  }
</style>
